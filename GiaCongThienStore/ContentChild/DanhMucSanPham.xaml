                                                                DisplayMemberBinding="{Binding PHIDUONGKINH}"></GridViewColumn>
                                                <GridViewColumn Header="Nhà cung cấp"
                                                                DisplayMemberBinding="{Binding NHACUNGCAP1.TENNHACUNGCAP}"></GridViewColumn>
                                                <GridViewColumn Header="Loại Sản phẩm"
                                                                DisplayMemberBinding="{Binding LOAISANPHAM1.TENLOAI}"></GridViewColumn>
                                                <GridViewColumn Header="Ngày khởi tạo"
                                                                DisplayMemberBinding="{Binding NGAYKHOITAO}"></GridViewColumn>
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                </ScrollViewer>-->
                            </DockPanel>
                        </materialDesign:Card>
                    </Grid>
                </Grid>
            </Grid>
        </StackPanel>


    </ScrollViewer>
</Window>
